<!-- views/dashboard.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OAK Investment - Dashboard</title>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Inter font from Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>
<body class="min-h-screen bg-gray-100 flex flex-col">
    <header class="bg-indigo-600 text-white p-4 shadow-md">
        <div class="container mx-auto flex justify-between items-center">
            <h1 class="text-2xl font-bold">OAK Investment</h1>
            <nav>
                <ul class="flex space-x-4">
                    <li><a href="/dashboard" class="hover:underline">Dashboard</a></li>
                    <li><a href="/products" class="hover:underline">Products</a></li>
                    <li><a href="/profile" class="hover:underline">Profile</a></li>
                    <li><a href="/logout" class="hover:underline">Logout</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <main class="flex-grow container mx-auto p-6">
        <h2 class="text-3xl font-semibold text-gray-800 mb-6">Welcome, <%= user.username %>!</h2>

        <% if (messages.success) { %>
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
                <strong class="font-bold">Success!</strong>
                <span class="block sm:inline"><%= messages.success %></span>
            </div>
        <% } %>
        <% if (messages.error) { %>
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
                <strong class="font-bold">Error!</strong>
                <span class="block sm:inline"><%= messages.error %></span>
            </div>
        <% } %>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <div class="bg-white p-6 rounded-lg shadow-md">
                <h3 class="text-xl font-semibold text-gray-800 mb-3">Wallet Balance</h3>
                <p class="text-3xl font-bold text-green-600">GHS <%= user.walletBalance %></p>
                <a href="/deposit" class="mt-4 inline-block bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700 transition-colors">Deposit</a>
                <a href="/withdraw" class="mt-4 ml-2 inline-block bg-red-500 text-white py-2 px-4 rounded-md hover:bg-red-600 transition-colors">Withdraw</a>
            </div>
            <div class="bg-white p-6 rounded-lg shadow-md">
                <h3 class="text-xl font-semibold text-gray-800 mb-3">Your Referrals</h3>
                <p class="text-3xl font-bold text-purple-600"><%= user.totalReferrals %></p>
                <a href="/referrals" class="mt-4 inline-block bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700 transition-colors">Invite Friends</a>
            </div>
            <div class="bg-white p-6 rounded-lg shadow-md">
                <h3 class="text-xl font-semibold text-gray-800 mb-3">Active Products</h3>
                <p class="text-3xl font-bold text-blue-600"><%= user.activeProductsCount || 0 %></p>
                <a href="/active-products" class="mt-4 inline-block bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700 transition-colors">View Products</a>
            </div>
        </div>
    </main>

    <footer class="bg-gray-800 text-white p-4 text-center">
        <p>&copy; 2024 OAK Investment. All rights reserved.</p>
    </footer>
</body>
</html>
